<odoo>
    <!-- Kanban -->
    <record id="view_servicio_asistencia_kanban" model="ir.ui.view">
        <field name="name">servicio.asistencia.kanban</field>
        <field name="model">servicio.asistencia</field>
        <field name="arch" type="xml">
            <kanban default_group_by="estado">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <strong><field name="tipo_asistencia"/></strong><br/>
                            <field name="cliente_id"/>
                            <div><field name="ubicacion"/></div>
                            <div><field name="fecha_solicitud"/></div>
                        </div>
                    </t>
                    <!-- Mini-form para creación rápida -->
                    <t t-name="kanban-box-new">
                        <div class="o_kanban_record_new">
                            <field name="tipo_asistencia"/>
                            <field name="cliente_id"/>
                            <field name="ubicacion"/>
                            <field name="fecha_solicitud"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree -->
    <record id="view_servicio_asistencia_tree" model="ir.ui.view">
        <field name="name">servicio.asistencia.tree</field>
        <field name="model">servicio.asistencia</field>
        <field name="arch" type="xml">
            <tree>
                <field name="cliente_id"/>
                <field name="tipo_asistencia"/>
                <field name="fecha_solicitud"/>
                <field name="estado"/>
                <field name="costo_estimado"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="view_servicio_asistencia_form" model="ir.ui.view">
        <field name="name">servicio.asistencia.form</field>
        <field name="model">servicio.asistencia</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generar_pdf" type="object" string="Generar PDF" class="btn-primary"/>
                    <field name="estado" widget="statusbar" statusbar_visible="solicitado,en_proceso,finalizado"/>
                </header>
                <sheet>
                    <group>
                        <field name="cliente_id"/>
                        <field name="tipo_asistencia"/>
                        <field name="ubicacion"/>
                        <field name="fecha_solicitud"/>
                        <field name="estado"/>
                        <field name="descripcion"/>
                        <field name="costo_estimado"/>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>

            </form>
        </field>
    </record>

    <!-- Calendar -->
    <record id="view_servicio_asistencia_calendar" model="ir.ui.view">
        <field name="name">servicio.asistencia.calendar</field>
        <field name="model">servicio.asistencia</field>
        <field name="arch" type="xml">
            <calendar string="Calendario de Asistencia" date_start="fecha_solicitud" color="tipo_asistencia" />
        </field>
    </record>

    <!-- Acción -->
    <record id="action_servicio_asistencia" model="ir.actions.act_window">
        <field name="name">Asistencias</field>
        <field name="res_model">servicio.asistencia</field>
        <field name="view_mode">kanban,tree,form,calendar</field>
    </record>
</odoo>
